<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.training.NewEntry"
    android:background="#FFFFFF">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount_editText"
        android:textColor="#ff3c43ff"
        android:hint="Amount"/>

    <EditText
        android:id="@+id/time_editText"
        android:layout_below="@+id/amount_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:hint="Time" />

    <EditText
        android:id="@+id/date_editText"
        android:layout_below="@+id/time_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23.04.2015"
        android:hint="Date" />

    <EditText
        android:id="@+id/repetition_editText"
        android:layout_below="@+id/date_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:hint="Repetition" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frequency_spinner"
        android:layout_below="@+id/repetition_editText"
        />



</RelativeLayout>
